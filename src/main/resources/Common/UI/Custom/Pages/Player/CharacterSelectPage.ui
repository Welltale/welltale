            Anchor: (Top: 6, Bottom: 6, Left: 8, Right: 8);
            LayoutMode: Top;

            Group {
              Anchor: (Height: 22);
              LayoutMode: Left;
              Label #CharacterSlot1Name {
                Text: "CREER UNE CLASSE";
                Style: (FontName: "Secondary", FontSize: 13, RenderBold: true, RenderUppercase: true, TextColor: #ccb588, Alignment: Start, VerticalAlignment: Center);
              }
              Group { FlexWeight: 1; }
              Label #CharacterSlot1Level {
                Text: "";
                Style: (FontName: "Secondary", FontSize: 12, RenderBold: true, TextColor: #8f9aa4, Alignment: End, VerticalAlignment: Center);
              }
            }

            Label #CharacterSlot1Class {
              Text: "Slot libre";
              Style: (FontSize: 12, TextColor: #7c8b99, Alignment: Start, VerticalAlignment: Center);
            }

            Group { FlexWeight: 1; }

            Label #CharacterSlot1Action {
