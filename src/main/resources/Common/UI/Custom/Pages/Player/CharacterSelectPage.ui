            Anchor: (Top: 2, Bottom: 2, Left: 2, Right: 2);
            LayoutMode: Top;
            Background: #10161f(1.00);
            Padding: (Full: 8);

            Group {
              Anchor: (Height: 24);
              LayoutMode: Left;
              Label #CharacterSlot1Name { Text: "CRÉER UNE CLASSE"; Style: (FontName: "Secondary", FontSize: 14, RenderUppercase: true, RenderBold: true, TextColor: #d2bc90, Alignment: Start, VerticalAlignment: Center); }
              Group { FlexWeight: 1; }
              Label #CharacterSlot1Level { Text: ""; Style: (FontName: "Secondary", FontSize: 12, RenderBold: true, TextColor: #8f9aa4, Alignment: End, VerticalAlignment: Center); }
            }
            $C.@SmallSpacer {}
            Label #CharacterSlot1Class { Text: "Emplacement libre"; Style: (FontSize: 13, TextColor: #a8b5c4, Alignment: Start); }
            Group { FlexWeight: 1; }
