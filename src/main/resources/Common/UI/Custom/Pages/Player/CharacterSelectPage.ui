$C = "../../Commons.ui";
$Sounds = "../../Sound.ui";

@CharacterSlotButtonStyle = ButtonStyle(
  Default: (
    Background: #13233a(1.00)
  ),
  Hovered: (
    Background: #1a2f4a(1.00)
  ),
  Pressed: (
    Background: #0e1827(1.00)
  ),
  Sounds: $Sounds.@ButtonsLight,
);

Group #MainContainer {
  Anchor: (Top: 0, Left: 0, Right: 0, Bottom: 0);
  Background: "../Class/ClassSelectBackground.png";

  Group #AccountPanel {
    Anchor: (Top: 24, Left: 24, Width: 520, Height: 82);
    LayoutMode: Top;
    Padding: (Top: 10, Bottom: 8, Left: 10, Right: 10);
    Background: (TexturePath: "../../Commons/Container/ContainerPanelPatch.png", Border: 4);

    Group {
      Anchor: (Height: 32);
      LayoutMode: Left;

      Label {
        Text: "WELLTALE";
        Style: (FontName: "Secondary", FontSize: 22, RenderUppercase: true, RenderBold: true, LetterSpacing: 2, TextColor: #d2bc90, Alignment: Start, VerticalAlignment: Center);
      }

      Group { FlexWeight: 1; }

      TextButton #DisconnectButton {
        Text: "DÉCONNEXION";
        Style: (...$C.@CancelButtonStyle);
        Anchor: (Width: 170, Height: 32);
      }
    }

    $C.@SmallSpacer {}

    Group {
      Anchor: (Height: 22);
      LayoutMode: Left;
      Background: #10161f(1.00);
      Padding: (Left: 8, Right: 8);
      FlexWeight: 1;

      Label {
        Text: "Choix du personnage";
        Style: (FontSize: 11, TextColor: #b89a66, Alignment: End, VerticalAlignment: Center);
      }
    }
  }

