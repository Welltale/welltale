$C = "../../Commons.ui";

Group #MainContainer {
  Anchor: (Top: 0, Left: 0, Right: 0, Bottom: 0);
  Background: #000000(0.65);

  Group #Frame {
    Anchor: (Top: 70, Bottom: 70, Horizontal: 240);
    LayoutMode: Top;
    Padding: (Full: 10);
    Background: (TexturePath: "../../Commons/Container/ContainerFullPatch.png", HorizontalBorder: 30, VerticalBorder: 30);

    Group #Header {
      Anchor: (Height: 54);
      Background: (TexturePath: "../../Commons/Container/ContainerHeaderStyled.png", HorizontalBorder: 50, VerticalBorder: 0);
      Padding: (Left: 16, Right: 16);

      Label {
        Text: "SELECTION DU PERSONNAGE";
        Style: (FontName: "Secondary", FontSize: 22, RenderUppercase: true, RenderBold: true, LetterSpacing: 1, Alignment: Center, TextColor: #d2bc90);
      }
    }

    $C.@SmallSpacer {}

    Group #DescriptionBar {
      Anchor: (Height: 30);
      LayoutMode: Left;
      Padding: (Left: 8, Right: 8);
      Background: #17212b(0.86);

      Label {
        Text: "Selectionne un personnage existant ou cree une nouvelle classe";
        Style: (FontSize: 12, TextColor: #96a9be, Alignment: Start, VerticalAlignment: Center);
      }
    }

    $C.@SmallSpacer {}

